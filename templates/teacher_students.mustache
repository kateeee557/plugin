<h2>{{#str}}students, mod_blockchain{{/str}}</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{#str}}user, mod_blockchain{{/str}}</th>
            <th>{{#str}}filename, mod_blockchain{{/str}}</th>
            <th>{{#str}}grade, mod_blockchain{{/str}}</th>
            <th>{{#str}}actions, mod_blockchain{{/str}}</th>
        </tr>
        </thead>
        <tbody>
        {{#submissions}}
            <tr>
                <td>{{user}}</td>
                <td>{{filename}}</td>
                <td>{{grade}}</td>
                <td>
                    <a href="view_submission.php?id={{id}}&moduleid={{moduleid}}" class="btn btn-info btn-sm">
                    {{#str}}view, mod_blockchain{{/str}}
                    </a>
                    {{#can_grade}}
                        <a href="grade.php?id={{id}}&moduleid={{moduleid}}" class="btn btn-primary btn-sm">
                        {{#str}}grade, mod_blockchain{{/str}}
                        </a>
                    {{/can_grade}}
                </td>
            </tr>
        {{/submissions}}
        {{^submissions}}
            <tr>
                <td colspan="4">{{#str}}nosubmissions, mod_blockchain{{/str}}</td>
            </tr>
        {{/submissions}}
        </tbody>
    </table>
</div>